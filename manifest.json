{
  "manifest_version": 3,
  "name": "SparkDouble",
  "version": "0.0.1",
  "description": "Instantly share Magic: The Gathering cards from popular websites to your Discord server!",
  "author": "Simon Upton - simon@uptonhome.com",
  "action": {
    "default_popup": "index.html"
  },
  "content_scripts": [{
    "matches": [
      "*://*.scryfall.com/*",
      "*://*.edhrec.com/*",
      "*://*.google.com/*"
    ],
    "js": ["content-script.js"]
  }],
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },
  "commands": {
    "share-card": {
      "suggested_key": "Ctrl+Shift+S",
      "description": "Share the currently hovered Magic: The Gathering card to your Discord server."
    }
  },
  "host_permissions": [
    "*://scryfall.com",
    "*://edhrec.com",
    "*://google.com"
  ],
  "permissions": [
    "scripting",
    "storage",
    "tabs",
    "activeTab"
  ]
}